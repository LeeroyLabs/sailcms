{
    "name": "leeroy/sailcms",
    "description": "Powerful CMS focusing on performance, DX and extensibility",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SailCMS\\": "sail/"
        }
    },
    "authors": [
        {
            "name": "Marc Giroux",
            "email": "marc@leeroy.ca"
        },
        {
            "name": "Philippe Bédard De Launière",
            "email": "philippe@leeroy.ca"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-sodium": "*",
        "vlucas/phpdotenv": "^5.4",
        "myclabs/php-enum": "^1.8",
        "symfony/string": "^6.0",
        "symfony/translation-contracts": "^3.0",
        "filp/whoops": "^2.14",
        "nesbot/carbon": "^2.58",
        "mongodb/mongodb": "^1.12",
        "ext-mongodb": "*",
        "twig/twig": "^3.4",
        "guzzlehttp/guzzle": "^7.4",
        "webonyx/graphql-php": "^14.11",
        "league/flysystem": "^3.2",
        "league/mime-type-detection": "^1.11",
        "spatie/ray": "^1.36",
        "symfony/yaml": "^6.1",
        "nunomaduro/termwind": "^1.14",
        "symfony/console": "^6.1",
        "robthree/twofactorauth": "^1.8",
        "bacon/bacon-qr-code": "^2.0",
        "ramsey/uuid": "^4.5",
        "monolog/monolog": "^3.2",
        "ext-curl": "*",
        "josantonius/session": "^2.0",
        "lcobucci/jwt": "^4.2"
    },
    "require-dev": {
        "pestphp/pest": "^1.21"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest"
    },
    "sailcms": {
        "containers": []
    }
}
